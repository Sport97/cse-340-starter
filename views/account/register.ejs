<h1><%= title %></h1>
<%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
<div id="login">
  <form class="account" action="/account/register" method="post">
    <fieldset class="register">
      <label id="account_firstname"
        >First Name:<input type="text" name="account_firstname" required
      /></label>

      <label id="account_lastname"
        >Last Name:<input type="text" name="account_lastname" required
      /></label>

      <label id="account_email"
        >Email:<input
          type="email"
          name="account_email"
          required
          placeholder="Enter a valid email address"
      /></label>

      <label id="account_password"
        >Password:<input
          type="password"
          name="account_password"
          required
          pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      /></label>
      <span
        >Password must be at least 12 characters and contain at least 1 number,
        1 capital letter and 1 special character</span
      >
    </fieldset>

    <input type="submit" name="regBtn" value="Register" />
  </form>
</div>
