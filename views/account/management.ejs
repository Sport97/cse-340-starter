<h1><%= title %></h1>
<%- messages() %>

<% if (locals.loggedin) { %>
<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<p><a href="/account/update/<%= accountData.account_id %>" title="Update your account information">Update Account Information</a></p>

<% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
<h3>Inventory Management</h3>
<p>
  <a href="/inv/" title="Go to Inventory Management">Access Inventory Management</a>
</p>
<% } %>
<% } else { %>
<h2>Please log in to access your account.</h2>
<% } %>